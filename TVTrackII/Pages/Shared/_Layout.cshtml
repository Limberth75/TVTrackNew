@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TVTrack - Sistema</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            background-color: #2c3e50;
            padding-top: 20px;
            color: white;
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                color: white;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #34495e;
                }

        .content {
            margin-left: 240px;
            padding: 20px;
        }

        .sidebar h3 {
            text-align: center;
            font-size: 1.4rem;
            margin-bottom: 30px;
        }

        .user-info {
            font-size: 0.9rem;
            text-align: center;
            margin-top: 10px;
            color: #bdc3c7;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h3>TVTrack</h3>

        <a href="/HomePage">Inicio</a>
        <a href="/Usuarios">Gestión de Usuarios</a>
        <a href="/Contenido">Gestión de Contenido</a>
        <a href="/Reportes">Reportes</a>
        <a href="/Login">Cerrar Sesión</a>

        <div class="user-info">
            @{
                var nombre = HttpContextAccessor.HttpContext?.Session.GetString("NombreUsuario");
                var rol = HttpContextAccessor.HttpContext?.Session.GetString("RolUsuario");
            }

            @if (!string.IsNullOrEmpty(nombre))
            {
                <p>@nombre</p>
                <small>@rol</small>
            }
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
