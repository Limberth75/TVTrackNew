@page
@model TVTrackII.Pages.ReportesModel
@{
    ViewData["Title"] = "Reportes del Sistema";
}

<h2 class="mb-4">Generación de Reportes</h2>

@if (!string.IsNullOrEmpty(Model.MensajeError))
{
    <div class="alert alert-danger">
        @Model.MensajeError
    </div>
}
else
{
    <div class="mb-4">
        <p>Seleccione el formato en el que desea descargar el reporte del sistema:</p>

        <div class="d-flex gap-3">
            <a class="btn btn-outline-success" href="/Reportes?handler=Csv">Descargar CSV</a>
            <a class="btn btn-outline-danger" href="/Reportes?handler=Pdf">Descargar PDF (HTML simulado)</a>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        Los reportes incluyen información de <strong>usuarios registrados</strong> y <strong>contenido disponible</strong> en el sistema.
    </div>
}
