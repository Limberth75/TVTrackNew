@page "{id:int}"
@model TVTrackII.Pages.Usuarios.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Eliminar Usuario</h2>

<p>¿Estás seguro que deseas eliminar el usuario: <strong>@Model.Usuario.Nombre</strong> con correo: <strong>@Model.Usuario.Correo</strong>?</p>

<form method="post">
    <button type="submit">Eliminar</button>
    <a href="/Usuarios">Cancelar</a>
</form>
