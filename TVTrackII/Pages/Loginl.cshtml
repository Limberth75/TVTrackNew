@page "/Login"
@model TVTrackII.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Iniciar Sesión - TVTrack</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('/images/cine-fondo.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background-color: rgba(0, 0, 0, 0.75);
            padding: 30px;
            border-radius: 12px;
            width: 400px;
            color: white;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-control {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Bienvenido a <span class="text-primary">TVTrack</span></h2>

        @if (!string.IsNullOrEmpty(Model.MensajeError))
        {
            <div class="alert alert-danger">@Model.MensajeError</div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Correo:</label>
                <input asp-for="Correo" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña:</label>
                <input asp-for="Contrasena" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>
    </div>
</body>
</html>
