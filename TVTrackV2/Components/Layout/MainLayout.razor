@inherits LayoutComponentBase
@using TVTrackV2.Pages
@using Microsoft.AspNetCore.Components.Routing

<div class="layout">
    <nav class="sidebar">
        <h3>TVTrackV2</h3>
        <ul>
            <li><NavLink href="/" Match="NavLinkMatch.All">🏠 Inicio</NavLink></li>
            <li><NavLink href="/usuarios">👤 Usuarios</NavLink></li>
            <li><NavLink href="/contenidos">🎬 Contenidos</NavLink></li>
        </ul>
    </nav>

    <div class="content-area">
        <header class="header">
            <h2>🎞️ Sistema de Seguimiento de Contenidos</h2>
        </header>

        <main class="main-content">
            @Body
        </main>
    </div>
</div>

<style>
    .layout {
        display: flex;
        height: 100vh;
        overflow: hidden;
        font-family: 'Segoe UI', sans-serif;
    }

    .sidebar {
        background-color: #2c3e50;
        color: white;
        width: 220px;
        padding: 20px;
    }

        .sidebar h3 {
            margin-top: 0;
            font-size: 1.6rem;
            border-bottom: 1px solid #7f8c8d;
            padding-bottom: 10px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            margin: 15px 0;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

            .sidebar a.active {
                text-decoration: underline;
            }

    .content-area {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .header {
        background-color: #34495e;
        color: white;
        padding: 15px 25px;
        border-bottom: 3px solid #2ecc71;
    }

    .main-content {
        padding: 25px;
        overflow-y: auto;
        background-color: #f4f6f7;
    }
</style>
