@page "/MiHistorial"
@model TVTrackII.Pages.MiHistorialModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<h2>Mi Historial de Visualización</h2>

@if (Model.Contenidos != null && Model.Contenidos.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Género</th>
                <th>Fecha de Visualización</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Contenidos)
            {
                <tr>
                    <td>@item.Contenido?.Titulo</td>
                    <td>@item.Contenido?.Genero</td>
                    <td>@item.Fecha.ToString("g")</td>
                    <td>
                        <a href="/Comentarios/@item.ContenidoId" class="btn btn-sm btn-outline-primary">Comentarios</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No has visto ningún contenido aún.</p>
}
