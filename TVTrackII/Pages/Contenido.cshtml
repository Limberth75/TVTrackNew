@page
@model TVTrackII.Pages.ContenidoModel
@inject IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http

<h2>Gestión de Contenido</h2>

@if (HttpContextAccessor.HttpContext?.Session.GetString("RolUsuario") == "Administrador")
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Título</th>
                <th>Género</th>
                <th>Fecha Visualización</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HistorialAdmin)
            {
                <tr>
                    <td>@item.Usuario</td>
                    <td>@item.Titulo</td>
                    <td>@item.Genero</td>
                    <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    if (Model.Contenidos != null && Model.Contenidos.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Género</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Contenidos)
                {
                    <tr>
                        <td>@item.Titulo</td>
                        <td>@item.Genero</td>
                        <td>
                            <a href="/Contenido?handler=Ver&idContenido=@item.Id" class="btn btn-primary">Ver</a>
                            <a href="/Comentarios/@item.Id" class="btn btn-secondary ms-2">Comentarios</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay contenido disponible.</p>
    }
}
