@page
@model TVTrackII.Pages.Reportes.IndexModel
@{
    ViewData["Title"] = "Reportes del Sistema";
}

<h2 class="mb-4">Generación de Reportes</h2>

@if (!string.IsNullOrEmpty(Model.MensajeError))
{
    <div class="alert alert-danger">
        @Model.MensajeError
    </div>
}
else
{
    <div class="mb-4">
        <p>Seleccione el formato en el que desea descargar el reporte del sistema:</p>

        <div class="mt-4 d-flex flex-column align-items-start">
            <a class="btn btn-outline-primary mb-2" href="/Reportes?handler=Csv">📄 Descargar CSV</a>
            <a class="btn btn-outline-secondary mb-2" href="/Reportes?handler=Pdf">🌐 Descargar HTML simulado</a>
            <a class="btn btn-outline-danger mb-2" href="/Reportes/GenerarPdf">📕 Descargar PDF real</a>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        Los reportes incluyen información de <strong>usuarios registrados</strong> y <strong>contenido disponible</strong> en el sistema.
    </div>

    <a href="/HomePage" class="btn btn-dark mt-4">← Volver al Menú Principal</a>
}
